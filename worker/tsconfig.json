{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "compileOnSave": true,
  "include": [
    "index.ts",
    "app/*.ts",
    "test/*.ts"
  ],
}
